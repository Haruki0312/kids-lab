<%= render "shared/second_header" %>
<div class='registration-main'>
  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <div class='session-header'>
      <h2>ログイン</h2>
    </div>

    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class='form-text'>メールアドレス</label>
          <span class='indispensable'>必須</span>
      </div>
      <%= f.email_field :email, class:'input-user', id:'email', placeholder:"examle@example.com" %>
    </div>
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class='form-text'>パスワード</label>
          <span class='indispensable'>必須</span>
      </div>
      <%= f.password_field :password, class:'input-user', id:'password', placeholder:"6文字以上の半角英数字" %>
    </div>
    <div class='login-btn'>
      <%= f.submit "ログイン" ,class:"login-button" %>
    </div>

  <% end %>
  <div class='root-btn'>
    <%= link_to 'もどる', root_path, class:'root-back-btn' %>
  </div>
</div>
<%= render "shared/footer" %>